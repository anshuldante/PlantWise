<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".ui.analysis.AnalysisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image Preview -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/capture" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Photo Tips -->
        <LinearLayout
            android:id="@+id/photo_tips_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Tips"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/md_theme_primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="\u2022 Use natural lighting or bright indoor light"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 Focus on affected areas like leaves and stems"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 Take multiple angles for comprehensive analysis"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Loading State -->
        <LinearLayout
            android:id="@+id/loading_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/analyzing"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Results Container -->
        <LinearLayout
            android:id="@+id/results_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Identification Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/identification"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/md_theme_primary" />

                    <TextView
                        android:id="@+id/plant_common_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="@color/text_primary"
                        tools:text="Monstera Deliciosa" />

                    <TextView
                        android:id="@+id/plant_scientific_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_secondary"
                        android:textStyle="italic"
                        tools:text="Monstera deliciosa" />

                    <TextView
                        android:id="@+id/identification_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_secondary"
                        tools:text="Native to Central America..." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Health Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/health_score"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="@color/md_theme_primary" />

                        <TextView
                            android:id="@+id/health_score"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/health_score_background"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="8" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/health_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_primary"
                        tools:text="Overall healthy plant with minor issues." />

                    <TextView
                        android:id="@+id/health_issues_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Issues Found:"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/issues_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Immediate Actions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/actions_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/immediate_actions"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/md_theme_primary" />

                    <LinearLayout
                        android:id="@+id/actions_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Care Plan Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/care_plan"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/md_theme_primary" />

                    <LinearLayout
                        android:id="@+id/care_plan_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Fun Fact Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fun_fact_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/md_theme_primaryContainer"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fun Fact"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/md_theme_onPrimaryContainer" />

                    <TextView
                        android:id="@+id/fun_fact_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        tools:text="This plant can grow up to 65 feet tall in its natural habitat!" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Correct This Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Correct this"
                android:visibility="gone"
                style="?attr/materialButtonOutlinedStyle" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/save_to_library" />

        </LinearLayout>

        <!-- Error State -->
        <LinearLayout
            android:id="@+id/error_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="@color/health_bad"
                tools:text="Analysis failed. Please try again." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/retry" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
