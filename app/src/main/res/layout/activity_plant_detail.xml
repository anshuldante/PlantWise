<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:contentScrim="@color/md_theme_primary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleGravity="bottom"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginBottom="16dp"
            app:expandedTitleTextColor="@color/white"
            app:collapsedTitleTextColor="@color/white">

            <ImageView
                android:id="@+id/plant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/nav_library"
                app:layout_collapseMode="parallax" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_scrim" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@android:drawable/ic_menu_revert" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Plant Metadata (Nickname & Location) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nickname_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nickname_label"
                        app:helperText="@string/nickname_helper"
                        app:helperTextEnabled="true"
                        app:endIconMode="clear_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nickname_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:imeOptions="actionDone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/location_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/location_label"
                        app:helperText="@string/location_helper"
                        app:helperTextEnabled="true"
                        app:endIconMode="clear_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <AutoCompleteTextView
                            android:id="@+id/location_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:imeOptions="actionDone" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Health Score -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/health_score"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="@color/md_theme_primary" />

                        <TextView
                            android:id="@+id/scientific_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/text_secondary"
                            android:textStyle="italic"
                            tools:text="Monstera deliciosa" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/health_score"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/health_score_background"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:text="8" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Health Score Sparkline -->
            <com.leafiq.app.ui.timeline.SparklineView
                android:id="@+id/health_sparkline"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone" />

            <!-- Sparkline Hint (shown when only 1 analysis) -->
            <TextView
                android:id="@+id/sparkline_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:text="Analyze again to track health trends"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/text_secondary"
                android:visibility="gone" />

            <!-- Latest Summary -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latest Analysis"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/md_theme_primary" />

                    <TextView
                        android:id="@+id/latest_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_primary"
                        tools:text="Plant is looking healthy with good growth." />

                    <TextView
                        android:id="@+id/last_analyzed_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/text_secondary"
                        tools:text="Analyzed on Feb 5, 2026" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Care Reminders -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/care_reminders_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header row with title and toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/care_reminders"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="@color/md_theme_primary" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_reminders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <!-- Schedules container -->
                    <LinearLayout
                        android:id="@+id/schedules_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical" />

                    <!-- Snooze suggestion hint -->
                    <TextView
                        android:id="@+id/snooze_suggestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/adjust_schedule_suggestion"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/health_warning"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Onboarding CTA Block (shown when no history) -->
            <LinearLayout
                android:id="@+id/onboarding_cta_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83C\uDF31"
                    android:textSize="48sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Let's get started"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Analyze your plant to get identification, health assessment, and care plan"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/onboarding_analyze_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Analyze Plant" />

                <TextView
                    android:id="@+id/onboarding_care_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Record a care activity"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="@color/md_theme_primary"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>

            <!-- Care History Section -->
            <LinearLayout
                android:id="@+id/care_history_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Care History"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/care_history_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0) >"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/md_theme_primary"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/care_history_inline_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/care_history_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No care activities recorded yet"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Analysis History Section -->
            <LinearLayout
                android:id="@+id/analysis_history_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Analysis History"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/analysis_history_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0) >"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/md_theme_primary"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/analysis_history_inline_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/analysis_history_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No analyses yet"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Correct This Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_correct_analysis"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Correct this"
                android:visibility="gone" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Delete Plant"
                android:textColor="@color/health_bad"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@color/health_bad"
                app:strokeColor="@color/health_bad" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reanalyze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Re-analyze"
        android:src="@android:drawable/ic_menu_camera"
        app:backgroundTint="@color/md_theme_primary"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
