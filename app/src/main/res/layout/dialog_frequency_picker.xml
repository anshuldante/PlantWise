<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Current frequency label -->
    <TextView
        android:id="@+id/current_frequency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current: Every 7 days"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/text_secondary" />

    <!-- Schedule source label -->
    <TextView
        android:id="@+id/schedule_source_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Suggested by AI"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="@color/md_theme_primary" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/text_secondary" />

    <!-- New frequency label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set new frequency:"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="@color/text_primary" />

    <!-- Frequency number and unit inputs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Frequency number input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frequency_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:text="7" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Frequency unit spinner -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Unit"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/frequency_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="days" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Hint text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Changing frequency marks schedule as customized"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="@color/text_secondary" />

</LinearLayout>
