<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Care type emoji -->
    <TextView
        android:id="@+id/care_type_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="ðŸ’§" />

    <!-- Vertical inner layout -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Care completion text -->
        <TextView
            android:id="@+id/care_completion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/text_primary"
            tools:text="Watered" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/care_completion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/text_secondary"
            tools:text="2 hours ago" />
    </LinearLayout>

    <!-- Source indicator -->
    <TextView
        android:id="@+id/care_completion_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="@color/text_secondary"
        tools:text="via notification" />

</LinearLayout>
