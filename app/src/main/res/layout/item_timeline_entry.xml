<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:id="@+id/entry_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Collapsed section (always visible) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Plant icon (circular) -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/plant_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_plant_placeholder"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <!-- Vertical stack: name + badge row, timestamp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Name and health badge row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/entry_plant_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/text_primary"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Plant Name" />

                    <TextView
                        android:id="@+id/entry_health_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/health_score_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="@color/white"
                        android:text="Healthy" />

                </LinearLayout>

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/entry_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/text_secondary"
                    android:text="3 days ago" />

            </LinearLayout>

            <!-- Expand chevron -->
            <ImageView
                android:id="@+id/entry_chevron"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="@color/text_secondary"
                android:contentDescription="Expand entry" />

        </LinearLayout>

        <!-- Expanded section (GONE by default) -->
        <LinearLayout
            android:id="@+id/expanded_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:visibility="gone">

            <!-- Photo and health info row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Photo thumbnail -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/entry_photo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_plant_placeholder"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />

                <!-- Vertical content: health label + diagnosis -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <!-- Health assessment label -->
                    <TextView
                        android:id="@+id/entry_health_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/health_good"
                        android:text="Healthy" />

                    <!-- Diagnosis summary -->
                    <TextView
                        android:id="@+id/entry_diagnosis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/text_secondary"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Diagnosis summary text" />

                    <!-- Limited details label (for degraded parse status) -->
                    <TextView
                        android:id="@+id/limited_details_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone"
                        android:text="Limited details" />

                </LinearLayout>

            </LinearLayout>

            <!-- Care highlights container -->
            <LinearLayout
                android:id="@+id/care_highlights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/care_highlight_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/text_primary"
                    android:text="• Water every 3 days" />

                <TextView
                    android:id="@+id/care_highlight_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/text_primary"
                    android:text="• Move to brighter spot" />

            </LinearLayout>

            <!-- View full analysis button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_full"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/md_theme_primary"
                android:text="View full analysis" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
